# Application Environment
ENVIRONMENT=development

# Database Configuration
# For local development with Docker Compose
DATABASE_URL=postgresql://neusearch:neusearch@localhost:5432/neusearch

# For Docker Compose (use this when running in containers)
# DATABASE_URL=postgresql://neusearch:neusearch@postgres:5432/neusearch

# Database Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# API Settings
API_PREFIX=/api

# CORS Settings (comma-separated for multiple origins, or * for all)
CORS_ORIGINS=*

# Scalar Docs Settings
SCALAR_THEME=default
SCALAR_LAYOUT=modern
SCALAR_SHOW_SIDEBAR=true
SCALAR_HIDE_DOWNLOAD_BUTTON=false
SCALAR_HIDE_MODELS=false
SCALAR_HIDE_SCHEMA=false

# OpenAI API Key (for embeddings and LLM - add when implementing RAG)
# OPENAI_API_KEY=your_openai_api_key_here

# HuggingFace API Key (alternative for embeddings)
# HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Vector Database Settings (if using external service like Pinecone)
# PINECONE_API_KEY=your_pinecone_api_key_here
# PINECONE_ENVIRONMENT=your_pinecone_environment_here
